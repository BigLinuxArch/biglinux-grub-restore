# Maintainer: Bruno Goncalves <bigbruno@gmail.com>

pkgname=biglinux-grub-restore
pkgver=25.09.11
pkgrel=0723
arch=('any')
license=('GPL')
url="https://github.com/biglinux/biglinux-grub-restore"
pkgdesc="Restore your installed system"
depends=('libadwaita' 'gtk4' 'python' 'python-gobject' 'vte4' 'mkinitcpio' 'grub' 'os-prober' 'pamac-cli' 'pacman' 'util-linux' 'manjaro-tools-base' 'xorg-xhost')
source=("git+https://github.com/biglinux/biglinux-grub-restore.git#branch=stable-2025-09-11_04-16")
md5sums=(SKIP)

package() {
    # Verify default folder
    if [ -d "${srcdir}/${pkgname}/${pkgname}" ]; then
        InternalDir="${srcdir}/${pkgname}/${pkgname}"
    else
        InternalDir="${srcdir}/${pkgname}"
    fi


    # Copy files
    if [ -d "${InternalDir}/usr" ]; then
        cp -r "${InternalDir}/usr" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/etc" ]; then
        cp -r "${InternalDir}/etc" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/opt" ]; then
        cp -r "${InternalDir}/opt" "${pkgdir}/"
    fi
}


